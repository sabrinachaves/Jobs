@model Jobs.Models.Candidate

@{
    ViewData["Title"] = "Edit";
}

<head>
    <link rel="stylesheet" type="text/css" href="~/css/style-Edit.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@200;500;800&display=swap" rel="stylesheet">
    <title>Editar Dados Pessoais</title>
</head>

<body>
    <div class="main">
        <div class="content">

            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="title">
                    <h1>Editar</h1>
                </div>
                <fieldset>
                    <label class="subtitle">Dados pessoais</label>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="Gender" class="control-label"></label>
                        <select asp-for="Gender" class="form-control">
                            <option>Feminino</option>
                            <option>Masculino</option>
                            <option>Prefiro não informar</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Race" class="control-label"></label>
                        <select asp-for="Race" class="form-control">
                            <option>Amarela</option>
                            <option>Branca</option>
                            <option>Indígena</option>
                            <option>Parda</option>
                            <option>Preta</option>
                        </select>
                        <span asp-validation-for="Race" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Pwd" class="control-label"></label>
                        <select asp-for="Pwd" class="form-control">
                            <option>Não</option>
                            <option>Sim</option>
                        </select>
                        <span asp-validation-for="Pwd" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Cpf" class="control-label"></label>
                        <input asp-for="Cpf" class="form-control" disabled />
                        <span asp-validation-for="Cpf" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Linkedin" class="control-label"></label>
                        <input asp-for="Linkedin" class="form-control" />
                        <span asp-validation-for="Linkedin" class="text-danger"></span>
                    </div>
                </fieldset>
                <div class="divButtons">
                    <button type="submit" class="btn btn-primary">Salvar</button>
                    <button class="btn btn-primary"><a asp-action="GeneralView" asp-route-id="@Model.Id">Voltar</a></button>
                </div>
            </form>
            <div>

            </div>
        </div>
    </div>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}