@model Jobs.Models.Education

@{
    ViewData["Title"] = "Formação acadêmica";
}

<head>
    <link rel="stylesheet" type="text/css" href="~/css/style-Formation.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@200;500;800&display=swap" rel="stylesheet">
    <title>Formação</title>
</head>
<body>
    <div class="main">
        <div class="content">
            <form asp-action="Create">
                <div class="title">
                    <h1>Meu currículo</h1>
                </div>
                <fieldset>
                    <label class="subtitle">Formação Acadêmica</label>
                    <div class="f-d-c" id="academic-list">
                        <div class="academic-item m-b-40">
                            <div class="form-group">
                                <input asp-for="Course" type="text" name="course" id="course" placeholder="Curso">
                                <select asp-for="CourseType" name="courseType" id="courseType" asp-items="Html.GetEnumSelectList<CourseType>()">
                                    <option selected disable value="">Tipo de curso</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <input asp-for="Institution" type="text" name="institution" id="institution" placeholder="Instituição">
                            </div>
                            <div class="form-group">
                                <input asp-for="StartDate" type="text" name="startDate" id="startDate" onfocus="(this.type='date')" onblur="(this.type='text')" placeholder="Data de início" />
                                <input asp-for="EndDate"
                                       type="text"
                                       onfocus="(this.type='date')"
                                       onblur="(this.type='text')"
                                       name="endDate"
                                       id="endDate"
                                       placeholder="Data de conclusão" />
                                <div class="checkbox-wrapper">
                                    <input type="checkbox"
                                           name="inProgress"
                                           id="inProgress"
                                           class="checkbox"
                                           onChange="handleInprogressCheckbox('inProgress', 'endDate')">
                                    <label for="inProgress" class="inProgress">Ainda estou cursando</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </fieldset>
                <div class="divButton">
                    <button type="submit" class="btn btn-primary">Salvar</button>
                </div>
            </form>
        </div>
    </div>
    <script src="~/js/script-NewResume.js"></script>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}